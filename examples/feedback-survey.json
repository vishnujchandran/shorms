[
  {
    "id": "page_basic",
    "title": "Basic Information",
    "fields": [
      {
        "id": "respondent_name",
        "type": "INPUT",
        "name": "respondent_name",
        "label": "Your Name",
        "placeholder": "Enter your name",
        "Icon": {},
        "registryDependencies": ["form", "input", "label"],
        "validation": {
          "required": true,
          "min": 2
        }
      },
      {
        "id": "respondent_email",
        "type": "EMAIL",
        "name": "respondent_email",
        "label": "Email Address",
        "placeholder": "you@example.com",
        "Icon": {},
        "registryDependencies": ["form", "input", "label"],
        "validation": {
          "required": true
        }
      },
      {
        "id": "customer_type",
        "type": "SELECT",
        "name": "customer_type",
        "label": "Customer Type",
        "Icon": {},
        "registryDependencies": ["form", "select", "label"],
        "choices": [
          { "value": "new", "label": "New Customer" },
          { "value": "existing", "label": "Existing Customer" },
          { "value": "potential", "label": "Potential Customer" }
        ],
        "validation": {
          "required": true
        }
      }
    ]
  },
  {
    "id": "page_ratings",
    "title": "Rate Your Experience",
    "fields": [
      {
        "id": "overall_satisfaction",
        "type": "SLIDER",
        "name": "overall_satisfaction",
        "label": "Overall Satisfaction",
        "description": "Rate from 0 (Poor) to 10 (Excellent)",
        "Icon": {},
        "registryDependencies": ["form", "slider"],
        "min": 0,
        "max": 10,
        "step": 1,
        "default": 5,
        "validation": {
          "required": true,
          "min": 0,
          "max": 10
        }
      },
      {
        "id": "product_quality",
        "type": "SLIDER",
        "name": "product_quality",
        "label": "Product Quality",
        "description": "Rate from 0 (Poor) to 10 (Excellent)",
        "Icon": {},
        "registryDependencies": ["form", "slider"],
        "min": 0,
        "max": 10,
        "step": 1,
        "default": 5
      },
      {
        "id": "customer_service",
        "type": "SLIDER",
        "name": "customer_service",
        "label": "Customer Service",
        "description": "Rate from 0 (Poor) to 10 (Excellent)",
        "Icon": {},
        "registryDependencies": ["form", "slider"],
        "min": 0,
        "max": 10,
        "step": 1,
        "default": 5
      },
      {
        "id": "value_for_money",
        "type": "NUMBER_INPUT",
        "name": "value_rating",
        "label": "Value for Money (1-5)",
        "placeholder": "Enter a number between 1 and 5",
        "Icon": {},
        "registryDependencies": ["form", "input", "label"],
        "min": 1,
        "max": 5,
        "validation": {
          "required": true,
          "min": 1,
          "max": 5,
          "errorMessage": "Please enter a value between 1 and 5"
        }
      }
    ]
  },
  {
    "id": "page_feedback",
    "title": "Detailed Feedback",
    "fields": [
      {
        "id": "liked_most",
        "type": "TEXTAREA",
        "name": "liked_most",
        "label": "What did you like most?",
        "placeholder": "Share what you enjoyed...",
        "Icon": {},
        "registryDependencies": ["form", "textarea", "label"],
        "validation": {
          "min": 10,
          "max": 500
        }
      },
      {
        "id": "improvement_areas",
        "type": "TEXTAREA",
        "name": "improvement_areas",
        "label": "What could be improved?",
        "placeholder": "Share your suggestions...",
        "Icon": {},
        "registryDependencies": ["form", "textarea", "label"],
        "validation": {
          "min": 10,
          "max": 500
        }
      },
      {
        "id": "recommend",
        "type": "RADIO_GROUP",
        "name": "would_recommend",
        "label": "Would you recommend us to others?",
        "Icon": {},
        "registryDependencies": ["form", "radio-group", "label"],
        "choices": [
          { "value": "yes", "label": "Yes, definitely" },
          { "value": "maybe", "label": "Maybe" },
          { "value": "no", "label": "No" }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "screenshot",
        "type": "FILE_UPLOAD",
        "name": "screenshot_attachment",
        "label": "Upload Screenshot (Optional)",
        "description": "Upload any relevant screenshots or documents",
        "Icon": {},
        "registryDependencies": ["form", "input", "label"],
        "accept": "image/*,.pdf",
        "maxSize": 5,
        "validation": {
          "maxFileSize": 5
        }
      },
      {
        "id": "follow_up",
        "type": "SWITCH",
        "name": "allow_follow_up",
        "label": "Allow follow-up contact",
        "description": "Can we contact you for more details?",
        "Icon": {},
        "registryDependencies": ["form", "switch", "label"],
        "default": false
      }
    ]
  }
